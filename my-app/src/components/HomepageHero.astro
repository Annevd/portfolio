---
import Star from "./icons/Star.astro"
import { Image } from 'astro:assets';
import EyeImage from '../assets/eye.png';
import ButterflyImage from '../assets/butterfly.png';
---
<div class="homepage-header">
    <h1 class="homepage-header__title caps">
        <div class="homepage-header--first-name">Anne <Star size="max(3.5rem, 12vw)" /></div> <!-- 9rem -->
        <div class="homepage-header--last-name">van Dijk</div>
        <div class="homepage-header__images" aria-hidden="true">
            <Image class="homepage-header__image" src={EyeImage} alt="" width="2228" height="1662"/>
            <Image class="homepage-header__image" src={ButterflyImage} alt="" width="2747" height="2596" />
        </div>
    </h1>

    <div class="homepage-header__text">
        <p class="homepage-header__description caps">Aspiring creative developer</p>
        <p class="homepage-header__description caps">About me, my frontend work, We-love-web talks I've visited and all of my other creations.</p>
    </div>
</div>


<style>

.homepage-header {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /* gap: calc(var(--gap) * 2); */
    /* grid-column: 1/13; */
    margin: var(--header-height) var(--spacing-border) var(--spacing-border) var(--spacing-border);
    min-height: calc(100lvh - var(--header-height) - var(--spacing-border));
}

.homepage-header__title {
    display: flex;
    flex-direction: column;
    font-size: max(4rem, 21vw);
    margin: auto 0;
    position: relative;
    z-index: -1;
    /* grid-column: 1/13; */
}

.homepage-header--first-name {
    display: flex;
    align-items: center;
    gap: calc(var(--gap) * 3);
}

.homepage-header--last-name {
    /* align-self: flex-end; */
    text-box: trim-start cap alphabetic;

}

.homepage-header__text {
    display: flex;
    flex-direction: column;
    gap: calc(var(--gap) * 2);
    font-size: max(1.5rem, 2vw);
}

.homepage-header__description:first-of-type {
    font-family: var(--regular-font-bold);
}

.homepage-header__description:last-of-type {
    /* max-width: 35vw; */
}

.homepage-header__images {
    display: none;
}

@media (width > 768px) {
    .homepage-header--last-name {
        align-self: flex-end;
    }

    .homepage-header__text {
        flex-direction: row-reverse;
        justify-content: space-between;
        font-size: max(1rem, 2vw);
    }
    .homepage-header__description:first-of-type {
        font-family: var(--regular-font-thin);
    }

    .homepage-header__description:last-of-type {
        max-width: max(18rem, 33vw);
        justify-self: flex-end;
    }

    .homepage-header__images {
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 100;
    }

    .homepage-header__image {
        position: absolute;
        height: auto;
        /* width: max(13rem, 25vw); */
        filter:drop-shadow(0 3rem 6px rgba(0, 0, 0, 0.5)); 
    }

    .homepage-header__image:first-of-type {
        right: 0;
        top: 0;
        width: max(13rem, 30vw);
        transform: rotate(8deg);
    }

    .homepage-header__image:last-of-type {
        /* bottom: 6rem; */
        bottom: 0;
        left: 0;
        width: max(13rem, 22vw);
        transform: rotate(-15deg);
    }
}

</style>